<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".view.activities.MainActivity"
        android:orientation="vertical"
        android:id="@+id/mLayoutMainActivityContainer">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPlusStockCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/plus_sign_icon"
            android:layout_margin="@dimen/size16dp"/>

    <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainMyStocksText"
            android:textSize="@dimen/size30sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/size20dp"
            android:paddingBottom="@dimen/size16dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mRecyclerView"/>

</LinearLayout>